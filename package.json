    "express": "^4.18.2",
    "node-cron": "^3.0.2",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.3.10",
    "pdfjs-dist": "^5.4.530",
    "pdfjs-dist-legacy": "^1.0.1",
    "sqlite3": "^5.1.6"
